# Environment Variables for AI Memory System

# Anthropic API Key (required for LLM-based memory extraction)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (alternative for embeddings)
# OPENAI_API_KEY=your_openai_api_key_here

# Storage Configuration
VECTOR_DB_PATH=./data/vector_store
METADATA_DB_PATH=./data/memory.db

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.1

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RECENCY_WEIGHT=0.3
IMPORTANCE_WEIGHT=0.4
RELEVANCE_WEIGHT=0.3

# Memory Decay
TIME_DECAY_ENABLED=true
HALF_LIFE_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/memory_system.log
